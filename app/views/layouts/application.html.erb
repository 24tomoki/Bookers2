<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-inverse" style="color: white;">
      <div class="container">
        <nav class="nav navbar navbar-left">
          <span>Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <!--ログイン-->
            <li>
              <%= link_to "Home",user_path(current_user), class: "glyphicon glyphicon-home homes" %>
            </li>
            <li>
              <%= link_to "Users",users_path, class: "glyphicon glyphicon-user users" %>
            </li>
            <li>
              <%= link_to "Books",books_path, class: "glyphicon glyphicon-book books" %>
            </li>
            <li>
              <%= link_to "logout",destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout" %>
            </li>
             <% else %>
            <!--未ログイン-->
           <li>
              <a class="glyphicon glyphicon-home home" href="/">
               Home
              </a>
            </li>
            <li>
              <a class="glyphicon glyphicon-link about" href="/home/about">
                 About
              </a>
            </li>
           <li>
              <%= link_to "Sign up",new_user_registration_path, class: "glyphicon glyphicon-edit" %>
            </li>
            <li>
              <a class="glyphicon glyphicon-log-in sign_in" href="/users/sign_in">
                 login
              </a>
            </li>
            <% end %>


          </ul>
        </nav>
      </div>
    </header>
    <%= notice %>
    <%= yield %>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
