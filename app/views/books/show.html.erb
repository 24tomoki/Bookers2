
<div class="body">
  <div class="container">
    <p id="notice"></p>
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <table class="table">
        <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
            <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
        </table>
          <div>
          <%= link_to '', edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
          </div>


          <div class="row">
        <h1>New book</h1>
         <%= form_with model: @newbook, url:'/books', local:true do |f| %>
          <h4>Title</h4>
         <%= f.text_field :title %>
          <h4>Opinion</h4>
         <%= f.text_field :body %>
         <%= f.submit 'Crate Book' %>
         <% end %>
        </div>
      </div>

    <div class="col-xs-9">
       <h3>Book detail</h3>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <td> <%= link_to user_path(@book.user) do %>
                <%= attachment_image_tag(@book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg") %></br>
                <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to @book.title, book_path(@book) %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <% if current_user.id == @book.user_id %>
              <td>
                <%= link_to "Edit", edit_book_path(@book.id), class: "btn-sm btn-success edit_book" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
              </td>
              <% end %>
            </tr>
         </thead>
        </table>
    </div>