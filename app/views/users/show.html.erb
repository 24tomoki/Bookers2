

<div class="body">
  <div class="container">
    <p id="notice"></p>
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <table class="table">
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
            <tr>
            <th>name</th>
            <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
        </table>
          <div>
          <%= link_to '', edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
          </div>


          <div class="row">
        <h1>New book</h1>
         <%= form_with model: @newbook, url:'/books', local:true do |f| %>
          <h4>Title</h4>
         <%= f.text_field :title %>
          <h4>Opinion</h4>
         <%= f.text_field :body %></br>
         <%= f.submit 'Create Book' %>
         <% end %>
        </div>
      </div>

      <div class="col-xs-9">
       <h3>Books</h3>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>

          <tbody>
           <% @books.each do |book| %>
            <tr>
             <td>
              <%= attachment_image_tag(book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg") %>
             </td>
             <td>
              <%= link_to book.title, book_path(book.id) %>
             </td>
             <td>
              <%= book.body %>
             </td>
            </tr>
             <% end %>
          </tbody>
        </table>
      </div>
